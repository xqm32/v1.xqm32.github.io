&lt;div class="mt-2" style="width: 100%">
&lt;textarea
id="stdout"
class="form-control rounded-0 border-1"
style="height: 150px"
>&lt;/textarea>
&lt;div id="res">&lt;/div>
&lt;/div>
&lt;/div>
