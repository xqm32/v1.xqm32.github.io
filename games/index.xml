<?xml version="1.0" encoding="utf-8" standalone="yes"?><rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom"><channel><title>Games on Qiming's Blog</title><link>https://xqm32.org/games/</link><description>Recent content in Games on Qiming's Blog</description><generator>Hugo -- gohugo.io</generator><language>zh-cn</language><atom:link href="https://xqm32.org/games/index.xml" rel="self" type="application/rss+xml"/><item><title/><link>https://xqm32.org/games/seasons/</link><pubDate>Mon, 01 Jan 0001 00:00:00 +0000</pubDate><guid>https://xqm32.org/games/seasons/</guid><description>&lt;!DOCTYPE html>
&lt;html lang="zh-cn">
&lt;head>
&lt;!-- Required meta tags -->
&lt;meta charset="utf-8" />
&lt;meta name="viewport" content="width=device-width, initial-scale=1" />
&lt;!-- Bootstrap CSS -->
&lt;link
href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
rel="stylesheet"
integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
crossorigin="anonymous"
/>
&lt;!-- Bootstrap icons-->
&lt;link
rel="stylesheet"
href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
/>
&lt;!-- seasons.css -->
&lt;link href="./seasons.css" rel="stylesheet" />
&lt;!-- vue.js -->
&lt;script src="https://cdn.jsdelivr.net/npm/vue@3.2.31/dist/vue.global.prod.js">&lt;/script>
&lt;!-- chart.js -->
&lt;script
src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"
integrity="sha256-ErZ09KkZnzjpqcane4SCyyHsKAXMvID9/xwbl/Aq1pc="
crossorigin="anonymous"
>&lt;/script>
&lt;title>Seasons Helper&lt;/title>
&lt;/head>
&lt;body>
&lt;div class="container-fluid" id="Seasons">
&lt;!-- Navbar start -->
&lt;nav class="navbar">
&lt;div class="container-fluid">
&lt;span class="navbar-brand">{{message.Brand}}&lt;/span>
&lt;div class="d-flex d-none d-sm-block">
&lt;button
class="btn me-2"
:class="'btn-outline-'+tab.type"
:disabled="!gaming||tab.disabled"
@click="tab.click"
v-for="tab in tabs"
>
&lt;i class="bi" :class="'bi-'+tab.icon">&lt;/i>
{{tab?.button}}
&lt;/button>
&lt;input
type="checkbox"
class="btn-check"
id="showHelp"
v-model="showHelp"
/>
&lt;label class="btn btn-outline-primary" for="showHelp">
&lt;i class="bi bi-question-lg">&lt;/i>
&lt;/label>
&lt;/div>
&lt;/div>
&lt;/nav>
&lt;!-- Navbar end -->
&lt;!-- Modal start -->
&lt;!-- See https://getbootstrap.com/docs/5.1/components/modal/#static-backdrop -->
&lt;div
class="modal fade"
data-bs-backdrop="static"
data-bs-keyboard="false"
tabindex="-1"
:id="'modal-'+id"
:key="id"
v-for="(modal, id) in modals"
>
&lt;div class="modal-dialog" :class="modal?.class">
&lt;div class="modal-content">
&lt;div class="modal-header">
&lt;h5 class="modal-title">{{modal.title}}&lt;/h5>
&lt;button
type="button"
class="btn-close"
data-bs-dismiss="modal"
aria-label="Close"
>&lt;/button>
&lt;/div>
&lt;div class="modal-body" v-html="modal.message">&lt;/div>
&lt;div class="modal-footer">
&lt;button
type="button"
class="btn btn-secondary"
data-bs-dismiss="modal"
v-if="modal.hasOwnProperty('cancel')"
>
{{modal.cancel}}
&lt;/button>
&lt;button
type="button"
class="btn btn-primary"
@click="()=>{modal.method();closeModal(id);}"
v-if="modal.hasOwnProperty('confirm')"
>
{{modal.confirm}}
&lt;/button>
&lt;/div>
&lt;/div>
&lt;/div>
&lt;/div>
&lt;!-- Modal end -->
&lt;!-- Alerts start -->
&lt;div
class="alert alert-dismissible fade show"
role="alert"
:id="'alert-'+id"
:class="'alert-'+alert.what.type"
:key="id"
v-for="(alert, id) in alerts"
>
{{alert.what.message}}
&lt;button
type="button"
class="btn-close"
aria-label="Close"
@click="closeAlert(id)"
>&lt;/button>
&lt;/div>
&lt;!-- Alerts end -->
&lt;!-- Main section start -->
&lt;!-- Choose colors start-->
&lt;table class="table table-borderless text-center" v-if="!gaming">
&lt;thead>
&lt;tr>
&lt;th
:style="{'background-color':color}"
v-for="color in ['orange','purple','yellow','gray']"
>&lt;/th>
&lt;/tr>
&lt;/thead>
&lt;tbody>
&lt;tr>
&lt;td
class="table-active"
v-for="color in ['orange','purple','yellow','gray']"
>
&lt;!-- form-check-inline 是为了使得 checkbox 可以水平居中 -->
&lt;div class="form-check form-switch form-check-inline">
&lt;input
class="form-check-input"
type="checkbox"
role="switch"
:id="color"
:value="color"
v-model="colors"
/>
&lt;/div>
&lt;/td>
&lt;/tr>
&lt;/tbody>
&lt;/table>
&lt;!-- Choose colors end-->
&lt;!-- Start button start -->
&lt;div class="row text-center">
&lt;div class="col-12">
&lt;button
type="button"
class="btn btn-outline-primary"
:disabled="colors.length&lt;2"
@click="start"
v-if="!gaming"
>
{{message.Start}}
&lt;/button>
&lt;/div>
&lt;/div>
&lt;!-- Start button end -->
&lt;!-- Game start-->
&lt;table class="table table-borderless table-sm text-center" v-if="gaming">
&lt;tbody>
&lt;tr
:class="{'table-success': color==colors[currentColor]}"
v-for="color in colors"
>
&lt;th scope="row" :style="{'background-color':color}">&lt;/th>
&lt;!-- Subtract crystals start -->
&lt;td class="text-end">
&lt;div class="btn-group" role="group">
&lt;button
type="button"
class="btn btn-outline-success"
@click="stageds[color]-=i"
v-for="i in [5,4,3,2,1]"
>
{{i}}
&lt;/button>
&lt;/div>
&lt;/td>
&lt;!-- Subtract crystals end -->
&lt;!-- Crystals start -->
&lt;td>
&lt;div class="btn-group" role="group">
&lt;button
type="button"
class="btn"
:class="'btn-outline-'+btnColor(color)"
:disabled="stageds[color]==0"
@click="commit(color)"
>
{{this.crystals[color]}}
&lt;!-- Badge start -->
&lt;!-- z-index 必须大于 1，否则将被按钮遮盖 -->
&lt;span
class="position-absolute top-0 start-100 translate-middle badge rounded-pill"
:class="'bg-'+bgColor(color)"
style="z-index: 2"
>
{{signedStage(color)}}
&lt;/span>
&lt;!-- Badge end -->
&lt;/button>
&lt;/div>
&lt;/td>
&lt;!-- Crystals end -->
&lt;!-- Add crystals start -->
&lt;td class="text-start">
&lt;div class="btn-group" role="group">
&lt;button
type="button"
class="btn btn-outline-danger"
@click="stageds[color]+=i"
v-for="i in [1,2,3,4,5]"
>
{{i}}
&lt;/button>
&lt;/div>
&lt;/td>
&lt;!-- Add crystals end -->
&lt;!-- Familiars start-->
&lt;td class="text-start" v-for="(familiar, name) in familiars">
&lt;div class="btn-group" role="group">
&lt;button
type="button"
class="btn btn-outline-primary"
@click="effect(color, name)"
>
{{familiar.message}}
&lt;span
class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary"
style="z-index: 2"
>
{{effecteds[color][name]}}
&lt;/span>
&lt;/button>
&lt;/div>
&lt;/td>
&lt;!-- Familiars end-->
&lt;!-- Operations start-->
&lt;td class="text-start">
&lt;div class="btn-group" role="group">
&lt;button
type="button"
class="btn btn-outline-primary"
@click="operate.method(color)"
v-for="operate in operations"
>
&lt;i class="bi" :class="'bi-'+operate.icon">&lt;/i>
&lt;/button>
&lt;/div>
&lt;/td>
&lt;!-- Operations end-->
&lt;th scope="row" :style="{'background-color':color}">&lt;/th>
&lt;/tr>
&lt;/tbody>
&lt;/table>
&lt;!-- Game end-->
&lt;!-- Guide start -->
&lt;ul class="list-group list-group-flush" v-if="showHelp">
&lt;li class="list-group-item" v-for="guide in guides">
&lt;button
type="button"
class="btn"
:class="'btn-outline-'+guide.type"
disabled
>
&lt;i class="bi" :class="'bi-'+guide.icon">&lt;/i>
&lt;/button>
{{guide.message}}
&lt;/li>
&lt;/ul>
&lt;!-- Guide end -->
&lt;!-- Main section end -->
&lt;/div>
&lt;!-- seasons.js -->
&lt;script src="./seasons.js">&lt;/script>
&lt;!-- Bootstrap Bundle with Popper -->
&lt;script
src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
crossorigin="anonymous"
>&lt;/script>
&lt;/body>
&lt;/html></description></item></channel></rss>